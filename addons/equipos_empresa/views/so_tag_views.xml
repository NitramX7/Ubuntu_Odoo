<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_so_tag_tree" model="ir.ui.view">
        <field name="name">equipos_empresa.so_tag.tree</field>
        <field name="model">equipos_empresa.so_tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="color"/>
            </tree>
        </field>
    </record>

    <record id="view_so_tag_form" model="ir.ui.view">
        <field name="name">equipos_empresa.so_tag.form</field>
        <field name="model">equipos_empresa.so_tag</field>
        <field name="arch" type="xml">
            <form string="Etiqueta S.O.">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color_picker"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_so_tags" model="ir.actions.act_window">
        <field name="name">Sistemas Operativos (Tags)</field>
        <field name="res_model">equipos_empresa.so_tag</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_equipos_so_tags" name="Sistemas Operativos" parent="equipos_empresa.menu_equipos_root" action="action_so_tags" sequence="30" groups="equipos_empresa.group_equipos_manager"/>
</odoo>
