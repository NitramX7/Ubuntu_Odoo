<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_componente_tree" model="ir.ui.view">
        <field name="name">equipos_empresa.componente.tree</field>
        <field name="model">equipos_empresa.componente</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="price"/>
                <field name="currency_id"/>
            </tree>
        </field>
    </record>

    <record id="view_componente_form" model="ir.ui.view">
        <field name="name">equipos_empresa.componente.form</field>
        <field name="model">equipos_empresa.componente</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="especificaciones"/>
                        <group>
                            <field name="price"/>
                            <field name="currency_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_componentes" model="ir.actions.act_window">
        <field name="name">Componentes</field>
        <field name="res_model">equipos_empresa.componente</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
</odoo>
