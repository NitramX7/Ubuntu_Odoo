<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_so_tag_tree" model="ir.ui.view">
        <field name="name">ubuntu_odoo.so_tag.tree</field>
        <field name="model">ubuntu_odoo.so_tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="color"/>
            </tree>
        </field>
    </record>

    <record id="view_so_tag_form" model="ir.ui.view">
        <field name="name">ubuntu_odoo.so_tag.form</field>
        <field name="model">ubuntu_odoo.so_tag</field>
        <field name="arch" type="xml">
            <form string="Etiqueta S.O.">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color_picker"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_so_tags" model="ir.actions.act_window">
        <field name="name">Sistemas Operativos (Tags)</field>
        <field name="res_model">ubuntu_odoo.so_tag</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
</odoo>
