<odoo>
    <!-- Vista lista de Componentes -->
    <record id="view_pc_component_list" model="ir.ui.view">
        <field name="name">ubuntu_odoo.componente.list</field>
        <field name="model">ubuntu_odoo.componente</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="price" />
            </list>
        </field>
    </record>

    <!-- Vista formulario de Componentes -->
    <record id="view_pc_component_form" model="ir.ui.view">
        <field name="name">ubuntu_odoo.componente.form</field>
        <field name="model">ubuntu_odoo.componente</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="price" />
                        <field name="currency_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n para abrir Componentes -->
    <record id="action_componentes" model="ir.actions.act_window">
        <field name="name">Componentes</field>
        <field name="res_model">ubuntu_odoo.componente</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>