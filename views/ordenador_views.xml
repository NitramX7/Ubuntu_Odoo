<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ordenador_tree" model="ir.ui.view">
        <field name="name">ubuntu_odoo.ordenador.tree</field>
        <field name="model">ubuntu_odoo.ordenador</field>
        <field name="arch" type="xml">
            <tree>
                <field name="numero_equipo"/>
                <field name="user_id"/>
                <field name="precio_total"/>
                <field name="ultima_modificacion"/>
            </tree>
        </field>
    </record>

    <record id="view_ordenador_form" model="ir.ui.view">
        <field name="name">ubuntu_odoo.ordenador.form</field>
        <field name="model">ubuntu_odoo.ordenador</field>
        <field name="arch" type="xml">
            <form string="Ordenador">
                <sheet>
                    <group>
                        <group>
                            <field name="numero_equipo"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="precio_total" readonly="1"/>
                            <field name="currency_id"/>
                            <field name="ultima_modificacion" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Componentes">
                            <field name="componente_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Sistemas operativos">
                            <field name="os_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </page>
                        <page string="Incidencias">
                            <field name="incidencias"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ordenadores" model="ir.actions.act_window">
        <field name="name">Ordenadores</field>
        <field name="res_model">ubuntu_odoo.ordenador</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
</odoo>
