<odoo>
  <!-- Vista lista -->
  <record id="view_pc_computer_list" model="ir.ui.view">
    <field name="name">pc.computer.list</field>
    <field name="model">pc.computer</field>
    <field name="arch" type="xml">
      <list>
        <field name="name" />
        <field name="precio" />
      </list>
    </field>
  </record>

  <!-- Vista formulario -->
  <record id="view_pc_computer_form" model="ir.ui.view">
    <field name="name">pc.computer.form</field>
    <field name="model">pc.computer</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name" />
            <field name="components_ids" />
            <field name="precio" readonly="1" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Acción -->
  <record id="action_pc_computer" model="ir.actions.act_window">
    <field name="name">Ordenadores</field>
    <field name="res_model">pc.computer</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- Menú -->
  <menuitem id="menu_pc_root" name="PCs" />
  <menuitem id="menu_pc_computer" parent="menu_pc_root"
    name="Ordenadores" action="action_pc_computer" />
</odoo>